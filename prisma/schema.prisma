// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  DELIVERY
}

enum DeliveryStatus {
  NOT_STARTED
  PENDING
  IN_PROGRESS
  COMPLETED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  carts         Cart[]
  quotations    Quotation[]
  orders        Order[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id            String    @id @default(cuid())
  name          String
  description   String    @db.Text
  price         Float
  stock         Int       @default(0)
  category      String
  location      String
  type          String
  images        String[]  // Array of image URLs
  colorVariants String[]  // Array of color options
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  cartItems     CartItem[]
  orderItems    OrderItem[]
  leftOvers     LeftOver[]
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id          String  @id @default(cuid())
  cartId      String
  productId   String
  quantity    Int     @default(1)
  colorVariant String?
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  cart        Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId, colorVariant])
}

model Quotation {
  id              String   @id @default(cuid())
  quotationNumber String   @unique
  userId          String
  items           Json     // Array of {productId, quantity, price, colorVariant}
  totalAmount     Float
  pdfUrl          String?
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  order           Order?
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique // PO Number
  userId      String
  quotationId String?     @unique
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  quotation   Quotation?  @relation(fields: [quotationId], references: [id])
}

model OrderItem {
  id               String         @id @default(cuid())
  orderId          String
  productId        String
  quantity         Int
  price            Float
  colorVariant     String?
  deliveryStatus   DeliveryStatus @default(NOT_STARTED)
  deliveryComments String?        @db.Text
  order            Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product          Product        @relation(fields: [productId], references: [id])

  @@index([orderId])
}

model category{
  id               String         @id @default(cuid())
  name             String
  description      String
}


model LeftOver {
  id                String   @id @default(cuid())
  productId         String
  custodianName     String
  custodianLocation String
  quantity          Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}


model AuditLog {
  id            String    @id @default(cuid())
  userId        String    // Admin user ID who performed the action
  userName      String?   // Admin user name (for easier querying)
  userEmail     String?   // Admin user email
  action        String    // CREATE, UPDATE, DELETE
  entityType    String    // PRODUCT, CATEGORY, LEFTOVER
  entityId      String    // ID of the entity that was modified
  entityName    String?   // Name of the entity (for easier querying)
  oldData       Json?     // Previous data (for UPDATE/DELETE)
  newData       Json?     // New data (for CREATE/UPDATE)
  changes       Json?     // Specific fields that changed (for UPDATE)
  ipAddress     String?   // IP address of the request
  userAgent     String?   // User agent of the request
  createdAt     DateTime  @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([action])
  @@map("AuditLog")  // Add this line to explicitly map to the table name
}